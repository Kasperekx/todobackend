  "paths": {
    "/tasks": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Get all tasks in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Tasks"
            }
          }
        }
      }
